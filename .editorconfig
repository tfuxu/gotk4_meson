# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 4

[meson.build]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
trim_trailing_whitespace = false

[*.xml]
indent_style = space
indent_size = 2

[*.ui]
indent_style = space
indent_size = 2

[*.blp]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
