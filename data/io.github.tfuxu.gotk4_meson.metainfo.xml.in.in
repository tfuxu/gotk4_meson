<?xml version='1.0' encoding='utf-8'?>
<component type="desktop-application">
  <id>@APP_ID@</id>
  <name translate="no">gotk4_meson</name>
  <summary>Example short description</summary>
  <developer id="io.github.tfuxu">
    <name translate="no">tfuxu</name>
  </developer>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <metadata_license>CC-BY-SA-4.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <update_contact>tfuxu@tutanota.com</update_contact>
  <content_rating type="oars-1.1"/>

  <description>
    <p>
      This is an example description.
    </p>
  </description>

  <screenshots>
    <screenshot type="default">
      <image type="source">https://github.com/tfuxu/gotk4_meson/blob/master/data/screenshots/screenshot-1.png</image>
    </screenshot>

    <screenshot>
      <image type="source">https://github.com/tfuxu/gotk4_meson/blob/master/data/screenshots/screenshot-2.png</image>
    </screenshot>
  </screenshots>

  <branding>
    <color type="primary" scheme_preference="light">#ffffff</color>
    <color type="primary" scheme_preference="dark">#000000</color>
  </branding>

  <url type="homepage">@PROJECT_URL@</url>
  <url type="bugtracker">@BUGTRACKER_URL@</url>
  <url type="help">@HELP_URL@</url>
  <!--<url type="translate">@TRANSLATE_URL@</url>-->

  <kudos>
    <kudo>HiDpiIcon</kudo>
    <kudo>ModernToolkit</kudo>
  </kudos>

  <requires>
    <internet>offline-only</internet>
    <display_length compare="ge">360</display_length>
  </requires>

  <supports>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </supports>

  <keywords>
    <keyword>GTK4</keyword>
  </keywords>

  <custom>
    <value key="Purism::form_factor">mobile</value>
  </custom>

  <releases>
